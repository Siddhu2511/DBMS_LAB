DECLARE
V_STATUS1 COURSE4.STATUS%TYPE:='OFFERED';
V_STATUS2 COURSE4.STATUS%TYPE:='NOT OFFERED';
CURSOR C20A IS
SELECT COURSE_ID,COUNT(*) FROM STUDENT4
GROUP BY COURSE_ID
HAVING COUNT(*)>10;
CURSOR C20B IS
SELECT COURSE_ID,COUNT(*) FROM STUDENT4
GROUP BY COURSE_ID
HAVING COUNT(*)<10;
BEGIN
FOR I IN C20A LOOP
UPDATE COURSE4 SET STATUS=V_STATUS1;
END LOOP;
FOR I IN C20B LOOP
UPDATE COURSE4 SET STATUS=V_STATUS2;
END LOOP;
END;
